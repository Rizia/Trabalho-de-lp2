			professor.Add(profe4);

			List<Disciplina> disciplina = new List<Disciplina>();

			Disciplina disciplina1 = new Professor();
			Disciplina disciplina2 = new Professor();
			Disciplina disciplina3 = new Professor();
			Disciplina disciplina4 = new Professor();

			disciplina.Add(disciplina1);
			disciplina.Add(disciplina2);
			disciplina.Add(disciplina3);
			disciplina.Add(disciplina4);

			List<Turma> turma = new List<Disciplina>();

			Turma turma1 = new Turma();
			Turma turma2 = new Turma();
			Turma turma3 = new Turma();
			Turma turma4 = new Turma();

