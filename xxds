			Aluno aluno3 = new Aluno();
			Aluno aluno4 = new Aluno();

			alunos.Add(aluno1);
			alunos.Add(aluno2);
			alunos.Add(aluno3);
			alunos.Add(aluno4);

			alunos[0].SetNome(Console.ReadLine());
			alunos[1].SetNome(Console.ReadLine());
			alunos[2].SetNome(Console.ReadLine());
			alunos[3].SetNome(Console.ReadLine());

			alunos[0].SetMatricula(Console.ReadLine());
			alunos[1].SetMatricula(Console.ReadLine());
			alunos[2].SetMatricula(Console.ReadLine());
			alunos[3].SetMatricula(Console.ReadLine());

			alunos[0].SetIdade(Convert.ToInt16(Console.ReadLine());
			alunos[1].SetIdade(Convert.ToInt16(Console.ReadLine());
			alunos[2].SetIdade(Convert.ToInt16(Console.ReadLine());
			alunos[3].SetIdade(Convert.ToInt16(Console.ReadLine());

