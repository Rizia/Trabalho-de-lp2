				Console.WriteLine("Digite a matrícula do aluno" + i + ":");
				alunos[i].setMatricula(Console.ReadLine());
			}
			for (int i = 0; i < professor.Count(); i++)
			{
				Console.WriteLine("Digite o nome do professor" + i + ":");
				alunos[i].setNome(Console.ReadLine());
				Console.WriteLine("Digite a matrícula do professor" + i + ":");
				alunos[i].setMatricula(Console.ReadLine());
			}
			bool cont = true;
			while (cont)
			{
				Console.WriteLine("O que quer fazer? 1 - Exibir nome dos alunos 2 - Matrícula dos alunos, 3 - Idade do aluno, 4- Endereço do Aluno ");


			}
		}


		class Aluno
		{
			string matricula;
			string Nome;
			string Endereco;
			int idade;

			public void setNome(string nAluno)
			{
				this.Nome = nAluno;

			}
			public string getNome()
			{
				return Nome;
			}
			public void setMatricula(string nMatricula)
			{
				this.matricula = nMatricula;
			}
			public string getMatricula()
			{
				return matricula;
			}
			public void setEndereco(string nEndereco)
			{
				this.endereco = nEndereco;
			}
			public string getEndereco()
			{
				return endereco;
			}
			public void setIdade(int nIdade)
			{
				this.idade = nIdade;
			}
			public string getIdade()
			{
				return idade;
			}
		}
